<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/house_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="36dp">

        <ImageView
            android:id="@+id/item_image_main"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:src="@drawable/house1" />

        <androidx.cardview.widget.CardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end"
            android:layout_margin="24dp"
            android:outlineProvider="none"
            android:padding="20dp"
            app:cardBackgroundColor="#A8ffffff"
            app:cardCornerRadius="16dp"

            >

            <ImageView
                android:id="@+id/icon_heart_love_the_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:src="@drawable/heart" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/sub_price_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/house_pic">


        <TextView
            android:id="@+id/item_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/cabin_medium"
            android:text="$200.000"
            android:textColor="@color/black"
            android:textFontWeight="900"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/item_text_price"
            android:text="Jenison, Ml 49428, SF"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_house_sub_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_price_address"
        android:text="4 bedrooms / 2 bathrooms / 1.416 ft^2"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>